<!doctype html><html lang="zh_cn"><head>    <meta charset="UTF-8">    <meta name="viewport"          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">    <meta http-equiv="X-UA-Compatible" content="ie=edge">    <title>约克动漫抽奖</title>    <link rel="stylesheet" href="/stylesheets/style.css">    <link rel="stylesheet" href="/stylesheets/index.css"></head><body>    <header class="yorkg-header">        <a href="" class="logo fl">            <img src="/images/txt-logo.png" alt="">        </a>        <ul class="header-menu fr fx12">            <li class="item">                <a href="/">首页</a>            </li>            <li class="item">                <a href="/">论坛</a>            </li>            <li class="item">                <a href="/">新闻</a>            </li>        </ul>    </header>    <div class="content">        <div class="full-banner">            <img src="/images/lottery-banner.png" class="full block" alt="">        </div>        <div class="mian-box">            <div class="yorkg-cj-box">                <div class="light"></div>                <div class="gift-box">                    <div class="scroll-card"></div>                </div>                <div class="object-tool">                    <div class="gouzier">                        <img src="/images/top-handle.png" alt="" class="top-gou">                        <div class="center-gou"></div>                        <div class="bottom-gou"></div>                        <img src="/images/fu.png" alt="" class="fu">                    </div>                </div>                <div class="object-todo">                    <p class="b-title fx14">                        <span>剩余抽奖次数</span>                        <span class="big">{{user.frequency}}</span>                        <span>次</span>                    </p>                    <p class="btn-wrap">                        <a href="javascript:;" class="btn-controller btn-main-goer"></a>                    </p>                </div>            </div>        </div>    </div>    <div class="gift-box-dialog">        <div class="bg"></div>        <img src="/images/state-1.png" alt="" class="start" style="        width: 0.68rem;        margin-left: -3.5rem;        margin-top: -4rem;">        <img src="/images/state-2.png" alt="" class="start" style="        width: 0.466rem;        margin-left: -4.2rem;        margin-top: -1rem;">        <img src="/images/state-3.png" alt="" class="start" style="        width: 0.68rem;        margin-left: -3.8rem;        margin-top: 3rem;">        <img src="/images/close.png" alt="" class="start close" style="        width: 0.65rem;        margin-left: -0.325rem;        margin-top: 3.4rem;">        <img src="/images/state-4.png" alt="" class="start" style="        width: 0.84rem;        margin-left: 3.2rem;        margin-top: 4rem;">        <img src="/images/state-1.png" alt="" class="start" style="        width: 0.6rem;        margin-left: 3.2rem;        margin-top: 1rem;">        <img src="/images/state-5.png" alt="" class="start" style="        width: 0.8rem;        margin-left: 3.2rem;        margin-top: -4rem;">        <div class="inner-content">            <h2 class="title">恭喜！</h2>            <h3 class="con">抱枕一个</h3>        </div>    </div></body><script src="/javascripts/public.js"></script><script>    // data base    var frequency = {{user.frequency}} // 用户抽奖次数</script><script src="https://cdn.bootcss.com/zepto/1.2.0/zepto.js"></script><script>    function resite() {        // 抽奖之前重置        $('.gouzier').find('.fu').hide()        $('.gouzier').removeClass('stop-animation').removeClass('run-cj')        $('.scroll-card').removeClass('stop-animation')    }    function toShowTheGift() {        // 显示礼物        $('.gift-box-dialog').addClass('active').show()    }    function toHideTheGift() {        // 隐藏礼物        $('.gift-box-dialog').removeClass('active').hide()        resite()    }        function setData(data) {        var content = $('.gift-box-dialog').find('.inner-content')        content.find('.con').html(data.name)        $('.object-todo').find('.big').html(--frequency)    }    function choujiang(cango) {        if(frequency <= 0){            cango.canSend = true            alert('没有次数了')            return        }        // 抽奖函数        // 首先停止动画        $('.gouzier').addClass('stop-animation').addClass('run-cj')        $('.scroll-card').addClass('stop-animation')        // 请求后台数据        $.ajax({            url: '/getTheGift',            success: function (data) {                setData(data)                cango.canSend = true            },            error: function (err) {                console.log(err)                cango.canSend = true            }        })        setTimeout(function () {            // 一秒以后抓住礼物            $('.gouzier').find('.fu').show()        }, 1000)        setTimeout(function () {            // 显示抽奖结果            toShowTheGift()        }, 1600)    }    $(function () {        var cango = {            canSend: true        }        $('.btn-main-goer').click(function () {            if(cango.canSend){                cango.canSend = false                choujiang.call(this, cango)            }        })        $('.gift-box-dialog').find('.close').click(toHideTheGift)    })</script></html>